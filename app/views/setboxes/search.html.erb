<div class="search bg-light p-5">
  <div class="container text-center">
    <%= form_tag(search_setboxes_path, :method => "get") do %>
      <%= text_field_tag :search, 
          nil, 
          class: "form-control", 
          placeholder: "搜尋學習集", 
          style: "display:inline-block;width:75%;" 
      %> 
      <%= submit_tag "搜尋",
          :name => nil,
          class: "btn btn-outline-secondary" 
      %> 
    <% end %> 
  </div>
</div>

<div class="bg-white">
  <div class="container">
    <div class="card-deck">
      <% @setboxes.each do |setbox| %>
        <div class="col-4 text-white p-4">
          <div class="cardshadow p-3">
            <h5 class="card-title text-dark">
              學習集：<%= link_to setbox.title, setbox_path(setbox) %>
            </h5>
            <p class="card-text text-dark">
              作者：<%= setbox.user.name %>
            </p>
            <% setbox.cards.each do |card| %>
              <p class="card-text text-dark">
                <%= "單字： #{card.card_word}" if params[:search].present? %>
              </p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>