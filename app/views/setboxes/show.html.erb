<div class="container mt-5 mb-4">
  <div class="row">
    
    <div class="col-3 text-center">
      <h5>測驗：</h5> 
      <div class="mt-3 mb-3">
        <button type="button" class="btn btn-success">1. 筆試</button>
      </div>
      <div>
        <button type="button" class="btn btn-success">2. 選擇</button>
      </div>
    </div>
    
    <div class="col-6">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="https://picsum.photos/200/150?random=1" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://picsum.photos/200/150?random=2" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://picsum.photos/200/150?random=3" class="d-block w-100" alt="...">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    
    <div class="col-3 text-center">
      <div class="mb-3">
        <button type="button" class="btn btn-secondary">分享</button>
      </div>
      <div class="mb-3">
        <button type="button" class="btn btn-secondary">刪除</button>
      </div>
      <div class="mb-3">
        <button type="button" class="btn btn-secondary">ＰＲ</button>
      </div>
      <div>
        <button type="button" class="btn btn-secondary">複製</button>
      </div>
    </div>

  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <% if @setbox %>
      <%= simple_form_for(@setbox) do |f| %>
      <h1>學習集名稱：<%= @setbox.title %></h1>
      <div id='cards'>
        <h2>本學習集中的詞語（ 數量count ）</h2>
        <%= f.simple_fields_for :cards do |card| %>
        <%= render 'show_fields', :f => card %>
        <button type="button" class="english" value=<%= card.object.id %>>Play</button>
        <button type="button" class="chinese" value=<%= card.object.id %>>播放</button>
        <% end %>
      </div>
      <% end %>
      <% else %>
      <h1>404</h1>
      <% end %>
    </div>
  </div>
</div>
