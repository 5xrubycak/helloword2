<div class="signinoutbg">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h4 class="card-title text-center ">Register</h4>
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= f.error_notification %>
                <div class="form-inputs">
                  <%= f.input :email, label: 'Email address',
                              required: false,
                              autofocus: true,
                              input_html: { autocomplete: "email" }%>
                  <%= f.input :password, label: 'Password',
                              required: false,
                              input_html: { autocomplete: "new-password" } %>
                  <%= f.input :password_confirmation, label: 'Re-enter password',
                              required: false,
                              input_html: { autocomplete: "new-password" } %>
                </div>
                <button class="btn btn-lg btn-primary btn-block rounded-pill">
                  <div class="form-actions">
                    <%= f.button :submit, "Register", class:'text-light font-weight-bold' %>
                  </div>
                </button>
                <div class="d-block text-center mt-2 small"><%= link_to "Sign In", new_user_session_path %></div>
                <hr class="my-4">
              <% end %>
              <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
